<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MAUIMobileStarterKit.Screens.AddNewItem.ReglementationAddPage"
             Color="#CAF0F8"
             CanBeDismissedByTappingOutsideOfPopup = "False">
    <StackLayout x:Name="popUpLayout" Orientation="Vertical" Spacing="15" Padding="10" VerticalOptions="CenterAndExpand">
        <Image Source="backbutton.png" HeightRequest="10" WidthRequest="10" HorizontalOptions="Start" >
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="BackIconTapped" />
            </Image.GestureRecognizers>
        </Image>

        <Label x:Name="NotAvailable" IsVisible="True" Text="Sorry, this fonctionnality will be available in the next version of the app.}" TextColor="#03045E" FontSize="24" TextDecorations="Underline"/>
        <Button IsVisible="False" Text="Add reglementation" />
    </StackLayout>
</toolkit:Popup>