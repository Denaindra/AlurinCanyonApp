<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIMobileStarterKit.Screens.MainPage"
             BackgroundColor="AliceBlue"
             Title="MainPage">

    <AbsoluteLayout>
        <StackLayout BackgroundColor="Brown" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="SizeProportional" />
        <Frame BorderColor="Transparent" CornerRadius="20" BackgroundColor="#1C3132" Padding="10,15,10,15" AbsoluteLayout.LayoutBounds="0.5, 0.99, 250,-1" AbsoluteLayout.LayoutFlags="PositionProportional" >
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Spacing="50" >
                <Image Source="loupe.png" Aspect="AspectFill" HeightRequest="20"/>
                <Image Source="address.png" Aspect="AspectFill" HeightRequest="20"/>
                <Image Source="clock.png" Aspect="AspectFill" HeightRequest="20"/>
            </HorizontalStackLayout>
        </Frame>

    </AbsoluteLayout>
    
    


</ContentPage>
